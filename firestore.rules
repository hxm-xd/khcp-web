rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    
    // Helper function to check if user is authenticated
    function isAuthenticated() {
      return request.auth != null;
    }

    // Public Collections (Read-only for public, Write for admins)
    match /posts/{docId} {
      allow read: if true;
      allow write: if isAuthenticated();
    }
    
    match /projects/{docId} {
      allow read: if true;
      allow write: if isAuthenticated();
    }
    
    match /avenues/{docId} {
      allow read: if true;
      allow write: if isAuthenticated();
    }
    
    match /directors/{docId} {
      allow read: if true;
      allow write: if isAuthenticated();
    }
    
    match /settings/{docId} {
      allow read: if true;
      allow write: if isAuthenticated();
    }

    // Messages Collection (Create for public, Read/Write ONLY for admins)
    match /messages/{messageId} {
      allow create: if true; // Allow public to send messages
      allow read, update, delete: if isAuthenticated();
    }

    // Default deny all other access
    match /{document=**} {
      allow read, write: if false;
    }
  }
}
